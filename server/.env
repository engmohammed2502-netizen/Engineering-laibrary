# ============================================
# إعدادات بيئة مكتبة كلية الهندسة
# جامعة البحر الأحمر
# ============================================

# -------------------------------
# إعدادات التطبيق
# -------------------------------
NODE_ENV=production
APP_NAME="مكتبة كلية الهندسة - جامعة البحر الأحمر"
APP_VERSION=1.0.0
PORT=5000
HOST=0.0.0.0

# -------------------------------
# إعدادات قاعدة البيانات
# -------------------------------
MONGODB_URI=mongodb://localhost:27017/engineering_library
MONGODB_URI_TEST=mongodb://localhost:27017/engineering_library_test

# -------------------------------
# إعدادات المصادقة
# -------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d
BCRYPT_SALT_ROUNDS=12

# حساب الروت (zero)
ROOT_USERNAME=zero
ROOT_PASSWORD=975312468qq

# -------------------------------
# إعدادات الجلسات
# -------------------------------
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE=3600000 # ساعة واحدة (بالميلي ثانية)
GUEST_SESSION_MAX_AGE=1800000 # 30 دقيقة للضيوف

# -------------------------------
# إعدادات الأمان
# -------------------------------
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=86400000 # 24 ساعة
CORS_ORIGIN=http://localhost:3000,http://192.168.83.200
RATE_LIMIT_WINDOW=15 * 60 * 1000 # 15 دقيقة
RATE_LIMIT_MAX=100 # 100 طلب لكل نافذة

# -------------------------------
# إعدادات الملفات
# -------------------------------
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=157286400 # 150 ميجابايت
MAX_IMAGE_SIZE=3145728 # 3 ميجابايت
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,xls,xlsx,txt,jpg,jpeg,png,gif,bmp,svg,zip,rar,7z,exe,mp4,avi,mov,wmv

# مسارات التحميل
UPLOAD_COURSES_PATH=./uploads/courses
UPLOAD_FORUM_PATH=./uploads/forum

# -------------------------------
# إعدادات البريد الإلكتروني
# -------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@engineering-library.redseauniversity.edu
EMAIL_FROM_NAME="مكتبة كلية الهندسة"

# -------------------------------
# إعدادات النسخ الاحتياطي
# -------------------------------
BACKUP_PATH=/var/backups/engineering-library
BACKUP_SCHEDULE="0 0 1 * *" # أول يوم من كل شهر
BACKUP_RETENTION_DAYS=90
BACKUP_MAX_COUNT=10

# -------------------------------
# إعدادات السيرفر
# -------------------------------
SERVER_IP=192.168.83.200
SERVER_PORT=5000
WEB_IP=192.168.83.200
WEB_PORT=80
NGINX_CONFIG_PATH=/etc/nginx/sites-available/engineering-library

# -------------------------------
# إعدادات السجلات
# -------------------------------
LOG_LEVEL=info
LOG_PATH=./logs
LOG_MAX_SIZE=10485760 # 10 ميجابايت
LOG_MAX_FILES=10

# -------------------------------
# إعدادات المنتدى
# -------------------------------
FORUM_MAX_MESSAGE_LENGTH=2000
FORUM_MAX_IMAGES_PER_MESSAGE=5
FORUM_ALLOW_GUEST_VIEW=true
FORUM_ALLOW_GUEST_POST=false
FORUM_MODERATION_ENABLED=true

# -------------------------------
# إعدادات أخرى
# -------------------------------
PAGINATION_LIMIT=20
API_VERSION=v1
TIMEZONE=Africa/Khartoum
DEFAULT_LANGUAGE=ar
SUPPORT_EMAIL=support@engineering-library.redseauniversity.edu
SUPPORT_PHONE=+249123456789
